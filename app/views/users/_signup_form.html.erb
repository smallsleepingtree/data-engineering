<%= simple_form_for user, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= t('user.form.legend') %></legend>
    <%= f.error_notification %>
    <%= f.input :email, :as => :email %>
    <h4>AND EITHER</h4>
    <div class="well well-small">
      <%= f.input :openid_url, :wrapper => :prepend, :class => 'inline' do %>
        <span class="add-on"><i class="icon-openid"></i></span>
        <%= f.input_field :openid_url %>
      <% end %>
    </div>
    <h4>OR</h4>
    <div class="well well-small">
      <%= f.input :password, :as => :password %>
      <%= f.input :password_confirmation, :as => :password %>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary', :id => 'register-button' %>
    </div>
  </fieldset>
<% end %>

<style>
  .icon-openid {
    background-image: url('/assets/login-bg.gif');
    background-position: center center;
  }
</style>